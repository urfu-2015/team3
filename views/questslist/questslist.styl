@import '../../blocks/header/header.styl';
@import '../../blocks/footer/footer.styl';

html, body
{
    height: 100%;
}

body
{
    padding: 0 0 0 100px;
}

.navmenu-brand
{
    width: 10px;
    height: 10px;
}

.inner-wrapper
{
    padding: 20px;
    z-index: 9000;
    color: #fff;
    text-shadow: 0 0 5px rgba(0,0,0,.5);
    text-overflow: ellipsis;
}

.quest-name
{
    width: 80%;
    overflow: hidden; 
    text-overflow: ellipsis;
    white-space: nowrap;
    position: absolute;
    display: block;
    bottom: 50%;
    z-index: 100;
    font-size: 30px;
    color: #fff;
}

.blur
{
    z-index: 10;
    width: 100%;
    height: 100%;
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    left: 0;
}


.medium .blur 
{
    background: url(2.jpg) no-repeat center center;
    background-size: cover;
}

.small .blur 
{
    background: url(1.jpg) no-repeat center center;
    background-size: cover;
}

.large .blur 
{
    background: url(3.jpg) no-repeat center center;
    background-size: cover;
}

.quest:hover .blur
{
    -webkit-filter: url(#blur);
    filter: url(#blur);
    -webkit-filter: blur(5px);
    filter: blur(5px);
    /*filter:progid:DXImageTransform.Microsoft.Blur(PixelRadius='3');*/
    -webkit-transition: 1s -webkit-filter linear;
    transition: 1s filter linear;
}

.row 
{
    height: 600px;
}

.small
{
    position: relative;
    background: url(1.jpg) no-repeat center center;
    background-size: cover;
    height: 50%;
}

.medium
{
    background: url(2.jpg) no-repeat center center;
    background-size: cover;
    height: 100%;
}

.large
{
    position: relative;
    background: url(3.jpg) no-repeat center center;
    background-size: cover;
    height: 100%;
}


.no-gutter > [class*='col-'] 
{
    padding-right:0;
    padding-left:0;
}

.container {
  max-width: 100%;
  margin: 0;
  padding: 0;
}

