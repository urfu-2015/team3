figure.effect-zoe h3::after
{
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 3px;
    background: #fff;
    content: '';
    transition: transform 0.35s;
    transform: translate3d(-100%,0,0);
}

figure.effect-zoe:hover h3::after
{
    transform: translate3d(0,0,0);
}